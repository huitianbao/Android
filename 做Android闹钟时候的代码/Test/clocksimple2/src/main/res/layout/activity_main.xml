<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.clocksimple2.MainActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/myviewpager"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_weight="1"/>


    <LinearLayout  android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0"
 >

        <LinearLayout
            android:layout_width="66dp"
            android:layout_height="46dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/image_homepage"
                android:layout_width="50sp"
                android:layout_height="30sp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/home_red"
                />    <!---llllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllll-->


            <TextView
                android:id="@+id/textView_homepager"
                android:layout_width="50sp"
                android:layout_height="30dp"
                android:text="   首页"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="66dp"
            android:layout_height="46dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <!---llllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllll-->


            <ImageView
                android:id="@+id/image_managepage"
                android:layout_width="50sp"
                android:layout_height="30sp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/manage_red" />

            <TextView
                android:id="@+id/textView_managepage"
                android:layout_width="50sp"
                android:layout_height="30dp"
                android:text="   管理"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="66dp"
            android:layout_height="46dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/image_settime"
                android:layout_width="50sp"
                android:layout_height="30sp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/jiajian_red" />    <!---llllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllll-->


            <TextView
                android:id="@+id/textView_settime"
                android:layout_width="60sp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:text="设置时间" />

        </LinearLayout>





    </LinearLayout>

</android.support.constraint.ConstraintLayout>
